@using Microsoft.AspNetCore.Identity
@model AutoPartsStore.WEB.Models.UserViewModel
@{
    ViewBag.Title = Model.IsNew ? "Добавление нового пользователя" : "Редактирование пользователя";
}
<link href="~/js/Notify/Notify.css" rel="stylesheet" />
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
<div id="notifications"></div>
<form method="post">
    <div>
        <label>Имя</label>
        <input type="text" name="Name" value=@Model.Name />
    </div>
    <div>
        <label>E-mail</label>
       <input type="text" name="Name" value=@Model.Email />
    </div>
    <div>
        @foreach (IdentityRole role in ViewBag.AllRoles)
        {
            <input type="radio" name="roles" value="@role.Name" @(Model.Role.Contains(role.Name) ? "checked" : "") />@role.Name <br />
        }
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="submit" value=@(Model.IsNew ? "Добавить" : "Изменить") />
</form>

@if (ViewBag.IsFailed) {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="~/js/Notify/Notify.js"></script>
    <script>Notify('@ViewBag.ErrorMessage', 'danger')</script>
}