@model UserViewModel
@{
    ViewBag.Title = "Edit user";
}
<form method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">User's name</label>
        <input id="Name" type="text" name="UserName" value=@Model.UserName class="form-control" />
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">E-mail</label>
        <input id="Email" type="text" name="Email" value=@Model.Email class="form-control" />
    </div> class="mb-3"
    <div class="mb-3">
        <label for="Role" class="form-label">Role</label>
        <select id="Role" asp-for="Role" asp-items="ViewBag.AllRoles" class="form-select"></select>
    </div class="mb-3">
    <input type="hidden" name="Id" value="@Model.Id" />
    <a href="User/ChangePassword/@Model.Id">Change password</a>
    <input type="submit" value="Edit" />
</form>