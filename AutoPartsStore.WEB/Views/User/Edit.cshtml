@model AutoPartsStore.WEB.Models.UserViewModel
@{
    ViewBag.Title = Model.IsNew ? "Add new user" : "Edit user";
}
<link href="~/js/Notify/Notify.css" rel="stylesheet" />
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
<div id="notifications"></div>
<form method="post">
    <div>
        <label>User's name</label>
        <input type="text" name="UserName" value=@Model.UserName />
    </div>
    <div>
        <label>E-mail</label>
        <input type="text" name="Email" value=@Model.Email />
    </div>

    <input type="hidden" name="Id" value="@Model.Id" />
    @if (!Model.IsNew) {
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label">Old password</label>
            <input type="text" asp-for="OldPassword" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">New password</label>
            <input type="text" asp-for="NewPassword" class="form-control" />
        </div>
        <input type="submit" value="Edit" ) />
    }
    else {
        <div>
            <label>Password</label>
            <input type="text" name="NewPassword" value=@Model.NewPassword />
        </div>
        <input type="submit" value="Add" ) />
    }

</form>

@if (ViewBag.IsFailed) {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="~/js/Notify/Notify.js"></script>
    <script>Notify('@ViewBag.ErrorMessage', 'danger')</script>
}