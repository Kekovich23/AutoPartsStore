@{
    ViewData["Title"] = "Users page";
}
<div class="container">
    <div class="row">
        <div class="col">
            <label for="UserName" class="form-label">User's name</label>
            <input type="text" id="UserName" class="form-control"/>
        </div>
        <div class="col">
            <label for="Email" class="form-label">Email</label>
            <input type="text" id="Email" class="form-control"/>
        </div>
        <div class="col">
            <button onclick="FilterOut('#userTable')" class="btn btn-primary">Filter</button>
        </div>
    </div>

    <br />

    <div style="width:90%; margin:0 auto;">
        <table id="userTable" class="table table-striped" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>E-mail</th>
                    <th>Role</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<a class='btn btn-info' href='User/AddUser'>Add new user</a>

@await Html.PartialAsync("DataTable", "UserDataTable")