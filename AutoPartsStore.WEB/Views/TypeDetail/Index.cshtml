@{
    ViewData["Title"] = "Type of detail page";
}
<div class="container">
    <div class="row">
        <div class="col">
            <label for="Name" class="form-label">Name</label>
            <input type="text" id="Name" class="form-control" />
        </div>
        <div class="col">
             <label for="SectionId" class="form-label">Section</label>
            <select id="SectionId" class="form-select">
                <option selected>-----</option>
                @foreach (var sectionDetail in ViewBag.Sections) {
                    <option value="@sectionDetail.Id">@sectionDetail.Name</option>
                }
            </select>
        </div>
        <div class="col">
            <button onclick="FilterOut('#typeDetailTable')" class="btn btn-primary">Filter</button>
        </div>
    </div>

    <br />

    <div style="width:90%; margin:0 auto;">
        <table id="typeDetailTable" class="table table-striped" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Section</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<a class="btn btn-primary" href="TypeDetail/Add/">Add new</a>

@await Html.PartialAsync("DataTable", "TypeDetailDatatable")