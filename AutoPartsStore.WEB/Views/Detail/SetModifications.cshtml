@model DetailViewModel;
@{
    ViewBag.Title = "Set modifications";
}
<form method="post">
    <div class="mb-3 row">
        <div class="col">
            <samp>@Model.Manufacturer.Name</samp>
        </div>
        <div class="col">
           <samp>@Model.TypeDetail.Name</samp>
        </div>
    </div>
    <select class="form-select" multiple name="modificationIds">
        @foreach (var modification in ViewBag.AllModifications) {
            <!option value="@modification.Id" @(ViewBag.ModificationsDetail.Contains(modification.Id) ? "checked" : "")>@modification.Name</!option>
        }
    </select>
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>