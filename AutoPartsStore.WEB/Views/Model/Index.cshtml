@{
    ViewData["Title"] = "Model page";
}
<div class="container">
    <label>Name</label>
    <input type="text" id="Name" />
    <select id="BrandId">
        <option value="@null">--------</option>
        @foreach (var brand in ViewBag.Brands)
        {
            <option value="@brand.Id">@brand.Name</option>
        }
    </select>
    <select id="TypeTransportId">
        <option value="@null">--------</option>
        @foreach (var typeTransport in ViewBag.TypesTransport)
        {
            <option value="@typeTransport.Id">@typeTransport.Name</option>
        }
    </select>
    <button onclick="FilterOut('#modelTable')">Filter</button>
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="modelTable" class="table table-striped" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Type transport</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<a class='btn btn-primary' href='Model/Add/'>Add new</a>

@await Html.PartialAsync("DataTable", "ModelDatatable")