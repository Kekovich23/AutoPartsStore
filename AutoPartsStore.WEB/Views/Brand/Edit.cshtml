@model BrandViewModel
@{
    ViewBag.Title = Model.IsNew ? "New brand" : "Edit brand";
}
<form method="post">
    <div>
        <label>Name</label>
        <input type="text" name="Name" value=@Model.Name />
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="submit" value=@(Model.IsNew ? "Add" : "Edit") />
</form>