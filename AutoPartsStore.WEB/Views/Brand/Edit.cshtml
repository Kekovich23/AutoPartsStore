@model AutoPartsStore.WEB.Models.BrandViewModel
@{
    ViewBag.Title = Model.IsNew ? "Добавление новой марки" : "Редактирование марки";
}
<link href="~/js/Notify/Notify.css" rel="stylesheet" />
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
<div id="notifications"></div>
<form method="post">
    <div>
        <label>Название</label>
        <input type="text" name="Name" value=@Model.Name />
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="submit" value=@(Model.IsNew ? "Добавить" : "Изменить") />
</form>

@if (ViewBag.IsFailed) {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="~/js/Notify/Notify.js"></script>
    <script>Notify('@ViewBag.ErrorMessage', 'danger')</script>
}